<div class="modal">
    <div>
        <span><i class="fas fa-times-circle close-modal"></i></span>
        <div>
            <img src="/static/assets/Logo2.png" alt="No CAAP Logo" width="100">
        </div>

        <div class="login">
            <p class="alert">{{message}}</p>
            <form method="POST" action="/login">
                <div class="form-control">
                    <h3>Login</h3>
                    <label for="login-email">Email</label>
                    <input id="login-email" name="login-email" type="text" class="rectangle-two" />
                    <small class="alert hidden">Invalid input</small>
                </div>
                <div class="form-control">
                    <label for="login-password">Password</label>
                    <input id="login-password" class="password rectangle-two" name="login-password" type="password" />
                    <i class="fas fa-eye password-toggle"></i>
                    <small class="alert hidden">Invalid input</small>
                    <p>Forget <a id="forgotten-password"><u>Password</u></a>?</p>
                </div>
                <div class="center">
                    <button class="btn" type="submit">Login</button>
                    <p> Don't have an account yet?</p>
                    <a class="toggle-signup"><u>Sign Up</u></a>
                </div>
            </form>
        </div>



        <div class="signup hidden">
            <h3>Sign up</h3>
            <p class="alert">{{message}}</p>
            <form method="POST" action="/signup">
                <div class="flex">
                    <div class="form-control">
                        <label for="first-name">First Name</label>
                        <input id="first-name" name="first-name" type="text" class="rectangle-two" />
                        <small class="alert hidden">Invalid input</small>
                    </div>
                    <div class="form-control">
                        <label for="last-name">Last Name</label>
                        <input id="last-name" name="last-name" type="text" class="rectangle-two" />
                        <small class="alert hidden">Invalid input</small>
                    </div>
                </div>
                <div class="form-control">
                    <label for="signup-email">Email</label>
                    <input id="signup-email" name="signup-email" type="text" class="rectangle-two" />
                    <small class="alert hidden">Invalid input</small>
                </div>
                <div class="form-control">
                    <label for="signup-password">Password</label>
                    <input id="signup-password" class="password rectangle-two" name="signup-password" type="password" />
                    <i class="fas fa-eye password-toggle"></i>
                    {{!-- Class for eye with slash through it: replace fa-eye with fa-eye-slash --}}
                    <small class="alert hidden">Invalid input</small>
                </div>
                <div class="form-control">
                    <label for="confirm-password">Confirm Password</label>
                    <input id="confirm-password" class="password rectangle-two" name="confirm-password"
                        type="password" />
                    <i class="fas fa-eye password-toggle"></i>
                    {{!-- Class for eye with slash through it: replace fa-eye with fa-eye-slash --}}
                    <small class="alert hidden">Invalid input</small>
                </div>
                <div class="center">
                    <button class="btn" type="submit">Signup</button>
                    <p>Already have an account?</p>
                    <a class="uppercase toggle-login"><u>Log In</u></a>
                </div>
            </form>
        </div>

        <div class=" form-control forgotten-password hidden">
            <h3>Forgot Password?</h3>
            <p class="alert">{{message}}</p>
            <p>Enter the email associated with your account and we'll send an email with instructions to reset your
                password. </p>
            <form method="POST" action="/forgotten-password">
                <div class="form-control">
                    <label for="forgot-pass-email">Email</label>
                    <input id="forgot-pass-email" name="forgot-pass-email" type="text" class="rectangle-two" />
                    <small class="alert hidden">Invalid input</small>
                </div>
                <div class="center">
                    <button class="btn" type="submit">Send</button>
                    <h4><span>Or</span></h4>
                    <button class="btn-secondary toggle-login" type="submit">Login</button>
                </div>
            </form>
        </div>
    </div>
</div>