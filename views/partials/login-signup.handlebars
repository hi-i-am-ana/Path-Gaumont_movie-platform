<div class="overlay hidden">
    <div class="login-signup">
        <i class="fas fa-times-circle" onclick="closeModal()"></i>
        <div class="flex">
            <div>
                <img src="#" alt="">
                <img src="#" alt="">
            </div>

            <div class="login">
                <h3 class="center">Login</h3>
                <p class="alert">{{message}}</p>
                <form method="POST" action="/login">
                    <div>
                        <label for="email">Email</label>
                        <input id="email" name="email" type="text" />
                        <small class="alert hidden">Invalid input</small>
                    </div>
                    <div>
                        <label for="password">Password</label>
                        <input id="password" name="password" type="password" />
                        <i class="fas fa-eye" onclick="passwordVisible()"></i>
                        {{!-- Class for eye with slash through it: replace fa-eye with fa-eye-slash --}}
                        <small class="alert hidden">Invalid input</small>
                    </div>
                    {{!-- TODO: toggleForgottenPassword function --}}
                    <p>Forget <a onClick="toggleForgottenPassword()">Password</a>?
                    <button class="center" type="submit">Login</button>
                </form>
                <p class="center">
                    Don't have an account yet?
                    {{!-- TODO: toggleSignUp function --}}
                    <a class="uppercase" onClick="toggleSignUp()">Sign Up</a>
                </p>
            </div>

            <div class="signup hidden">
                <h3 class="center">Sign up</h3>
                <p class="alert">{{message}}</p>
                <form method="POST" action="/signup">
                    <div class="flex">
                        <div>
                            <label for="first-name">First Name</label>
                            <input id="first-name" name="first-name" type="text" />
                            <small class="alert hidden">Invalid input</small>
                        </div>
                        <div>
                            <label for="last-name">Last Name</label>
                            <input id="last-name" name="last-name" type="text" />
                            <small class="alert hidden">Invalid input</small>
                        </div>
                    </div>
                    <div>
                        <label for="email">Email</label>
                        <input id="email" name="email" type="text" />
                        <small class="alert hidden">Invalid input</small>
                    </div>
                    <div>
                        <label for="password">Password</label>
                        <input id="password" name="password" type="password" />
                        <i class="fas fa-eye" onclick="passwordVisible()"></i>
                        {{!-- Class for eye with slash through it: replace fa-eye with fa-eye-slash --}}
                        <small class="alert hidden">Invalid input</small>
                    </div>
                    <div>
                        <label for="confirm-password">Confirm Password</label>
                        <input id="confirm-password" name="confirm-password" type="password" />
                        <i class="fas fa-eye" onclick="passwordVisible()"></i>
                        {{!-- Class for eye with slash through it: replace fa-eye with fa-eye-slash --}}
                        <small class="alert hidden">Invalid input</small>
                    </div>
                    <button class="center" type="submit">Login</button>
                </form>
                <p class="center">
                    Already have an account?
                    <a class="uppercase" onClick="toggleLogIn()">Log In</a>
                </p>
            </div>

            <div class="forgotten-password hidden">
                <h3 class="center">Forgotten Password</h3>
                <p class="alert">{{message}}</p>
                <form method="POST" action="/forgotten-password">
                    <div>
                        <label for="email">Email</label>
                        <input id="email" name="email" type="text" />
                        <small class="alert hidden">Invalid input</small>
                    </div>
                    <button class="center" type="submit">Send</button>
                </form>
                <p class="center">
                    <a class="uppercase" onClick="toggleLogIn()">Log In</a>
                </p>
            </div>
        </div>
    </div>